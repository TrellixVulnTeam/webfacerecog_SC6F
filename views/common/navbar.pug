mixin navbar(user)
  nav.navbar.navbar-expand.navbar-light.bg-light
    a(href="/", aria-label="Golden Goose").navbar-brand.mr-0.mr-md-2
      img(src="/images/golden-goose.svg", width="36", height="36")
    if user
      .collapse.navbar-collapse

        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href="/") Home
        .navbar-right
          span.navbar-text Hello #{user.firstname}!
        .navbar-right
          ul.navbar-nav.mr-auto
            li.nav-item
              a.nav-link(href="/logout") Logout
    if !user
      .collapse.navbar-collapse

        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href="/") Home
        .navbar-right
          ul.navbar-nav.mr-auto
            li.nav-item
              a.nav-link(href="/signup") Sign up
            li.nav-item
              a.nav-link(href="/login") Login
            

      